{% extends 'layout.html.twig' %}

{% block title %}SIGES| MON COMPTE{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-8 col-sm-8 col-md-offset-2 col-sm-offset-2">
            {{ form_start(form) }}
                <div class="card card-login card-hidden">
                    <div class="card-header text-center" data-background-color="blue">
                        <h4 class="card-title">MON COMPTE</h4>
                        <div class="social-line">

                        </div>
                    </div>
                    <p class="category text-center">

                    <div style="background-color: orange; font-size: 14px; color: white"></div>

                    </p>
                    <div class="card-content">

                        {% for message in app.flashes('success')  %}
                            <div class="alert alert-success"> {{ message }}</div>

                        {% endfor  %}

                        <div class="row">
                            <div class="col-md-8 col-md-offset-2">

                                <div class="form-group">

                                    <div class="form-group">
                                        {{ form_row(form.firstname,{'label': 'Nom ','attr': {'placeholder': 'Nom ','class': 'form-control'}}) }}


                                    </div>
                                </div>
                                <div class="form-group">

                                    {{ form_row(form.lastname,{'label': 'Prénoms ','attr': {'placeholder': 'Prénoms ','class': 'form-control'}}) }}


                                </div>


                                <div class="form-group">

                                    {{ form_row(form.gender,{'label': 'Genre ','attr': {'placeholder': 'Genre ','class': 'form-control'}}) }}


                                </div>

                                <div class="form-group">

                                    {{ form_row(form.birthdate,{'label': 'Date de Naissance ','attr': {'placeholder': 'Date de naissance (ex: 10/10/2020) ','class': 'form-control datepicker'}}) }}


                                </div>






                                <div class="form-group">

                                    {{ form_row(form.type,{'label': 'Fonction ','attr': {'placeholder': 'Type ','class': 'form-control'}}) }}


                                </div>






                                <div class="form-group">


                                    {{ form_row(form.email,{'label': 'Email','attr': {'Placeholder': 'Adresse email','class': 'form-control'}}) }}


                                </div>
                                <div class="form-group">


                                    {{ form_row(form.phone,{'label': 'Téléphone ','attr': {'Placeholder': 'Téléphone','class': 'form-control'}}) }}


                                </div>



                                <div class="form-group">

                                    {{ form_row(form.title,{'label': 'Titre ','attr': {'placeholder': 'Titre','class': 'form-control'}}) }}


                                </div>


                                <div class="form-group">

                                    {{ form_row(form.speciality,{'label': 'Spécialité ','attr': {'placeholder': 'Spécialité ','class': 'form-control'}}) }}


                                </div>


                                <div class="form-group">

                                    {{ form_row(form.discipline,{'attr': {'label': 'Discipline ','placeholder': 'Discipline ','class': 'form-control'}}) }}


                                </div>

                                <div class="form-group">

                                    {{ form_row(form.up,{'label': 'Unité pédagogique ','attr': {'placeholder': 'UP ','class': 'form-control'}}) }}

                                </div>





                                <div class="card card-profile">
                                    <div class="card-avatar">
                                        <a href="#pablo">
                                            {% if app.user.picture=="" %}
                                                <img src="{{ asset('build/img/default-avatar.png') }}" alt="photoprofile"/>

                                            {% endif %}

                                            {% if app.user.picture!="" %}
                                                <img src="/SIGES/public/images/users/{{ app.user.picture }}" alt="photoprofile"/>

                                            {% endif %}
                                        </a>
                                    </div>

                                    <div class="col-sm-offset-5">{{ form_row(form.picture) }}</div>


                                </div>

                                <div class="col-sm-offset-4"> <button type="submit" class="btn btn-info" >
                                    METTRE A JOUR</button></div>

                            </div>
<br>

                        </div>
                        {{ form_end(form) }}
                    </div>
                    <br>
                    {%if(app.session.get('userrole')  =='ROLE_ENS')%}

                    <div style="text-align: center">
                         <a href="{{ path('siges_dashboardteacher') }}" class="btn btn-warning btn-round">Accéder au Tableau de bord</a>


                    </div>
                    {% endif %}


                    <br>
                    {%if(app.session.get('userrole')  =='ROLE_PEDAGORES')%}

                        <div style="text-align: center">


                            <a href="{{ path('siges_dashboardpedagores') }}" class="btn btn-warning btn-round">Accéder au Tableau de bord</a>

                        </div>
                    {% endif %}



                </div>
            </form>
        </div>
    </div>
{% endblock %}
