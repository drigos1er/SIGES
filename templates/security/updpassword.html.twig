{% extends 'layout.html.twig' %}

{% block title %}SIGES| MODIFIER MON MOT DE PASSE{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-8 col-sm-8 col-md-offset-2 col-sm-offset-2">
            {{ form_start(form) }}
                <div class="card card-login card-hidden">
                    <div class="card-header text-center" data-background-color="blue">
                        <h4 class="card-title">MODIFIER MON MOT DE PASSE</h4>
                        <div class="social-line">

                        </div>
                    </div>
                    <p class="category text-center">

                    <div style="background-color: orange; font-size: 14px; color: white"></div>

                    </p>
                    <div class="card-content">

                        {% for message in app.flashes('success')  %}
                            <div class="alert alert-success"> {{ message }}</div>

                        {% endfor  %}

                        <div class="row">
                            <div class="col-md-8 col-md-offset-2">

                                <div class="form-group">

                                    <div class="form-group">
                                        {{ form_row(form.oldpwd,{'label': 'Mot de passe actuel ','attr': {'class': 'form-control'}}) }}

                                    </div>
                                </div>
                                <div class="form-group">

                                    {{ form_row(form.newpwd,{'label': 'Nouveau mot de passe ','attr': {'class': 'form-control'}}) }}


                                </div>


                                <div class="form-group">

                                    {{ form_row(form.confirmpwd,{'label': 'Confirmer Mot de passe','attr': {'class': 'form-control'}}) }}


                                </div>








                                <div class="col-sm-offset-4"> <button type="submit" class="btn btn-info" >
                                    MODIFIER</button></div>

                            </div>
<br>

                        </div>
                        {{ form_end(form) }}
                    </div>
                    <br>

                </div>
            </form>
        </div>
    </div>
{% endblock %}
