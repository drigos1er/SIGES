{% extends 'layout.html.twig' %}

{% block title %}Connectez-vous{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-4 col-sm-6 col-md-offset-4 col-sm-offset-3">
            <form method="post" action="">
                <div class="card card-login card-hidden">
                    <div class="card-header text-center" data-background-color="blue">
                        <h4 class="card-title">BIENVENUE</h4>
                        <div class="social-line">

                        </div>
                    </div>
                    <p class="category text-center">

                    <div style="background-color: orange; font-size: 14px; color: white"></div>
                    {% if error  %}
                        <div class="alert alert-danger"> {{ error.messageKey|trans(error.messageData, 'security') }}</div>

                    {% endif  %}
                    {% for message in app.flashes('success')  %}
                        <div class="alert alert-success"> {{ message }}</div>

                    {% endfor  %}
                    </p>
                    <div class="card-content">
                        <form  action="{{ path('security_login') }}" method="post" >

                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="material-icons">face</i>
                                            </span>
                            <div class="form-group label-floating">

                                <input type="text" id="username" name="_username" value="" required="required" placeholder="Nom d'utilisateur" class="form-control"/>


                            </div>
                        </div>

                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="material-icons">lock_outline</i>
                                            </span>
                            <div class="form-group label-floating">

                                <input type="password" id="password" name="_password" required="required" placeholder="Mot de Passe" class="form-control" />

                            </div>
                        </div>
                    </div>
                    <div class="footer text-center">

                        <button type="submit" id="_submit" name="_submit" class="btn btn-info btn-round">Se connecter</button>
                    </div>
                    <p style="text-align: center;">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <a href="{{ path('security_resetpwd') }}" style="color: red; font-style: italic">Mot de passe oubli√© ?</a></p>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
