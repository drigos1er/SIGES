<script type="text/javascript" language="javascript" class="init">

    var editor; // use a global for the submit and return data rendering in the examples

    $(document).ready(function() {
        editor = new $.fn.dataTable.Editor( {
            ajax: "http://localhost:8888/SIGES/public/build/editeur/examples/php/nexrpedit.php",
            table: "#example",
            fields: [

                {
                    label: "Moyenne:",
                    name: "student_examnotes.exam_notes"

                },
                {
                    label: "Datesaisie:",
                    name: "student_examnotes.entry_date",
                    def:    function () { return new Date(); }
                },
                {
                    label: "Usersaisie:",
                    name: "student_examnotes.entry_user"

                }
            ]
        } );

        // Activate an inline edit on click of a table cell
        $('#example').on( 'click', 'tbody td:not(:first-child)', function (e) {
            editor.inline( this, {
                onBlur: 'submit'
            } );
        } );

        $('#example').DataTable( {
            dom: "Bfrtip",
            ajax: {
                url: "http://localhost:8888/SIGES/public/build/editeur/examples/php/nexrpedit.php",
                type: 'POST'
            },
            "language": {
                "search": "_INPUT_",
                "searchPlaceholder": "Recherche",
                "paginate": {
                    "first":      "Premier",
                    "last":       "Dernier",
                    "next":       "Suivant",
                    "previous":   "Précédent"
                },
                "zeroRecords":    "Aucun Resultat Trouvé",
                "emptyTable":     "Aucun Resultat Trouvé",
                "info":           "Affichage de _START_ à _END_ sur _TOTAL_ entrées",
                "infoEmpty":      "Affichage de 0 à 0 sur 0 entrées",
                "infoFiltered":   "(filtrés sur _MAX_ total entrées)",
                "infoPostFix":    "",
                "thousands":      ",",
                "lengthMenu":     "Afficher _MENU_ entrées",
                "loadingRecords": "Chargement...",
                "processing":     "Chargement...",
                "search":         "Recherche:"

            },
            columns: [

                { data: "student.id" },
                { data: "student.firstname" },
                { data: "student.lastname" },
                { data: "student.birthdate" },
                { data: "student.placeofbirth" },
                { data: "student.kind" },

                { data: "student_examnotes.exam_notes",

                    render: function ( data, type, row ) { if(data==99){
                        return  "";
                    }
                        return data;
                    }
                }
            ],
            order: [ 1, 'asc' ],
            select: {
                style:    'os',
                selector: 'td:first-child'
            },
            buttons: [
                {
                    extend: 'collection',
                    text: 'Exporter',
                    buttons: [

                        'excel'


                    ]
                }
            ]
        } );
    } );

